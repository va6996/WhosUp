<Page
    x:Class="WhosUp.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WhosUp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="301*"/>
            <ColumnDefinition Width="99*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2">
            <TextBlock Margin="20,20,0,0" FontWeight="Medium" Text="ABOUT" FontSize="20"/>
            <TextBlock Margin="20,20,20,20" Text="Vibraille" FontSize="40"/>
            <TextBlock Margin="20,20,0,0" FontWeight="Light" Text="Version 0.1" FontSize="20"/>
        </StackPanel>
        <TextBlock Margin="121,0,21.804,20" Text="The Lannisters" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </Grid>
</Page>

